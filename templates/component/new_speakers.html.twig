{% import '@SyliusBootstrapAdminUi/shared/helper/avatar.html.twig' as avatar %}

<div class="col-12 col-md-6">
    <div class="card mb-3">
        <div class="card-header">
            <h3 class="card-title">{{ 'app.ui.new_speakers'|trans }}</h3>
        </div>
        <div class="table-responsive">
            <table class="table table-vcenter card-table">
                <thead>
                <tr>
                    <th>{{ 'app.ui.name'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for speaker in new_speakers|default([]) %}
                    <tr>
                        <td>
                            <div class="row align-items-center py-1">
                                <div class="col-auto">
                                    {% if speaker.avatar %}
                                        {% set avatar_path = vich_uploader_asset(speaker.avatar) %}

                                        {{ avatar.default(avatar_path, 'img-thumbnail') }}
                                    {% else %}
                                        <span class="avatar">
                                            {{ speaker.firstName|first }}{{ speaker.lastName|first }}
                                        </span>
                                    {% endif %}
                                </div>
                                <div class="col text-truncate">
                                    <div>{{ speaker.fullName }}</div>
                                    <div class="text-muted text-truncate mt-n1">{{ speaker.companyName }}</div>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="2" class="text-center"><a href="{{ path('app_admin_speaker_index') }}">{{ 'app.ui.show_all'|trans }}</a></td>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
